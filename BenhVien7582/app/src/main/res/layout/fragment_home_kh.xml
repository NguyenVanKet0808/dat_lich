<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/backround">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Trang Chủ"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top1"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/img_logo"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:text="Bệnh Viện Kỹ Thuật Cao 758"
                android:textStyle="bold"
                android:textColor="@color/mauchinh"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:text="6 ,Trần Văn Ơn , Phú Hoà , TP. Thủ Dầu Một, Bình Dương"/>


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/hinhanh"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/top1"
        android:layout_marginTop="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/hinhanh">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/image_button_lich_kham"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:drawableTop="@drawable/ic_lich"
                android:text="lịch hẹn khám"
                android:textSize="13sp"
                android:padding="10dp"
                android:background="@color/white"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#DD0000"
                android:layout_gravity="right"
                android:layout_marginRight="20dp" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/image_button_lich_su_kham"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/ic_history"
            android:text="Lịch Sử Khám"
            android:padding="10dp"
            android:textSize="13sp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_margin="20dp"/>



    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dat_lich_kh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@id/btn_chat_kh"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/mauchinh"
        android:text="Đặt Lịch khám"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_chat_kh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:text="Hỗ trợ đặt khám"
        android:textColor="@color/mauchinh"
        android:drawableLeft="@drawable/ic_support"
        android:paddingLeft="70dp"
        android:paddingRight="90dp"/>




</RelativeLayout>